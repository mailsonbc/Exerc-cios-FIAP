@model ClienteModel

@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Detalhe</h2>
                <form action="/cliente/editar" method="post">                   
                    <input type="hidden" name="ClienteId" value="@Model.ClienteId" readonly/> @*campo necessário para poder salvar no banco de dados*@
                    <div class="form-group">
                        <label class="control-label">Nome</label>
                        <input class="form-control col-5" name="Nome" value="@Model.Nome" readonly/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input class="form-control col-5" name="Email" value="@Model.Email" readonly/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Data Nascimento</label>
                        <input class="form-control col-5" name="DataNascimento" value="@Model.DataNascimento" readonly/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observação</label>
                        <textarea class="form-control" name="Observacao" readonly>@Model.Observacao</textarea>
                    </div>
                    <a href="/cliente" class="btn btn-dark btn-sm">Voltar</a>                
                </form>
            </div>
        </div>
    </div>
</div>
