@model ClienteModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Editar</h2>
                <form asp-action="Editar" asp-controller="Cliente" method="post">                   
                    <input type="hidden" asp-for="ClienteId" readonly/> @*campo necessário para poder salvar no banco de dados*@
                    <div class="form-group">
                        <label class="control-label" asp-for="Nome"></label>
                        <input class="form-control col-5" asp-for="Nome" />
                        <span class="text-danger" asp-validation-for="Nome"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Email"></label>
                        <input class="form-control col-5" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="DataNascimento"></label>
                        <input class="form-control col-5" asp-for="DataNascimento" />
                        <span class="text-danger" asp-validation-for="DataNascimento"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Observacao"></label>
                        <textarea class="form-control" asp-for="Observacao"></textarea>
                        <span class="text-danger" asp-validation-for="Observacao"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="RepresentanteId"></label>
                        <input class="form-control col-5" asp-for="RepresentanteId" />
                        <span class="text-danger" asp-validation-for="RepresentanteId"></span>
                    </div>
                    <a asp-action="Index" asp-controller="Cliente" class="btn btn-dark btn-sm">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-sm">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>
